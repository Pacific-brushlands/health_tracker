<p id="notice"><%= notice %></p>

<h1>Listing Cals</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>Cals on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cals.each do |cal| %>
      <tr>
        <td><%= cal.amount %></td>
        <td><%= cal.description %></td>
        <td><%= cal.cals_on %></td>
        <td><%= link_to 'Show', cal %></td>
        <td><%= link_to 'Edit', edit_cal_path(cal) %></td>
        <td><%= link_to 'Destroy', cal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

