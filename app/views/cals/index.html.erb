<p id="notice"><%= notice %></p>

<h1 id='page_header'>Listing Cals</h1>


<table class='table_header'>
    <tr>
      <th>Calories</th>
      <th>Description</th>
      <th>Date</th>

    </tr>
</table>

<div class='row_list', style="overflow:scroll">
<table>
    <% @cals.each do |cal| %>
      <tr>
        <td><%= link_to cal.amount , edit_cal_path(cal) %></td>
        <td><%= link_to cal.description , edit_cal_path(cal) %></td>
        <td>
          <%= cal.cals_on %>
          <%= link_to 'X', cal, method: :delete, data: { confirm: 'Are you sure you want to delete this row?' } %>
        </td>
      </tr>
    <% end %>
</table>
</div>

<br>
<div id='center_button'>
<%= link_to 'Create New', new_cal_path, :class => 'button_new' %>
</div>
