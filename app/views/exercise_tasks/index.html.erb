<p id="notice"><%= notice %></p>

<h1>Listing Exercise Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Exercise type</th>
      <th>Cals burned</th>
      <th>Exercise on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_tasks.each do |exercise_task| %>
      <tr>
        <td><%= exercise_task.exercise_type_id %></td>
        <td><%= exercise_task.cals_burned %></td>
        <td><%= exercise_task.exercise_on %></td>
        <td><%= link_to 'Show', exercise_task %></td>
        <td><%= link_to 'Edit', edit_exercise_task_path(exercise_task) %></td>
        <td><%= link_to 'Destroy', exercise_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

